{
    "compilerOptions": {
        "target": "es6", // Specify ECMAScript target version
        "module": "commonjs", // Specify module code generation
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Enable esModuleInterop for compatibility
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
        "outDir": "./dist", // Redirect output structure to the dist directory
        "rootDir": "./src", // Specify the root directory of input files
        "sourceMap": true // Generate corresponding .map file
    },
    "include": [
        "src/**/*.ts" // Include all TypeScript files in the src directory
    ],
    "exclude": [
        "node_modules" // Exclude node_modules from the compilation
    ]
}